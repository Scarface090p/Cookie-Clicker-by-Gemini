    <div id="right-panel">
        <div class="store-header">Store</div>
        
        <div class="upgrade disabled" id="buy-cursor" onclick="buy('cursor')">
            <div class="upgrade-icon">üñ±Ô∏è</div>
            <div class="upgrade-info">
                <span class="name">Cursor</span>
                <span class="cost" id="cursor-cost">15</span>
            </div>
            <div class="count" id="cursor-count">0</div>
        </div>

        <div class="upgrade disabled" id="buy-grandma" onclick="buy('grandma')">
            <div class="upgrade-icon">üëµ</div>
            <div class="upgrade-info">
                <span class="name">Grandma</span>
                <span class="cost" id="grandma-cost">100</span>
            </div>
            <div class="count" id="grandma-count">0</div>
        </div>

        <div class="upgrade disabled" id="buy-farm" onclick="buy('farm')">
            <div class="upgrade-icon">üöú</div>
            <div class="upgrade-info">
                <span class="name">Farm</span>
                <span class="cost" id="farm-cost">1,100</span>
            </div>
            <div class="count" id="farm-count">0</div>
        </div>
    </div>

    <script>
        let cookies = 0;
        let cps = 0;

        const data = {
            cursor:  { cost: 15,   income: 0.1, count: 0 },
            grandma: { cost: 100,  income: 1,   count: 0 },
            farm:    { cost: 1100, income: 8,   count: 0 }
        };

        const cookieEl = document.getElementById('cookie');
        const countEl = document.getElementById('cookie-count');
        const cpsEl = document.getElementById('cps-count');

        function updateUI() {
            countEl.innerText = Math.floor(cookies).toLocaleString() + " cookies";
            cpsEl.innerText = "per second: " + cps.toFixed(1);

            for (let id in data) {
                const item = data[id];
                const btn = document.getElementById('buy-' + id);
                const costBtn = document.getElementById(id + '-cost');
                const countBtn = document.getElementById(id + '-count');
                
                costBtn.innerText = Math.ceil(item.cost).toLocaleString();
                countBtn.innerText = item.count;

                if (cookies >= item.cost) {
                    btn.classList.remove('disabled');
                } else {
                    btn.classList.add('disabled');
                }
            }
        }

        function buy(id) {
            const item = data[id];
            if (cookies >= item.cost) {
                cookies -= item.cost;
                item.count++;
                cps += item.income;
                item.cost *= 1.15;
                updateUI();
            }
        }

        cookieEl.addEventListener('click', () => {
            cookies++;
            updateUI();
        });

        // Game Loop
        setInterval(() => {
            cookies += (cps / 10);
            updateUI();
        }, 100);

        // Random News
        const news = [
            "Your cookies are being used for local currency.",
            "A grandmother has been spotted outside your house.",
            "Scientists say cookies are the new gold.",
            "Local news: Local baker becomes millionaire overnight!"
        ];
        setInterval(() => {
            document.getElementById('news-ticker').innerText = '"' + news[Math.floor(Math.random()*news.length)] + '"';
        }, 8000);

    </script>
